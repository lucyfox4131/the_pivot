<%= form_for @charity, url: "/charities/#{@charity.id}" do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <%= f.submit "Create Charity", class: "btn btn-warning" %>

<% end %>
