<h1 class='col-sm-10 col-sm-offset-1'1>A Home for Organizations that Build Homes</h1>

<% @charities.each do |charity| %>
  <div class="well col-sm-10 col-sm-offset-1">
    <div class="container">
      <div class="col-sm-5 photo">
        <%= image_tag "reSTORE.png", :class => "img-responsive center-block" %>
      </div>
      <div class="col-sm-4 details">
        <p><%= link_to "Learn more about #{charity.name}", charities_path, class: "center-block learn-more" %></p>
      </div>
    </div>
  </div>
<% end %>
