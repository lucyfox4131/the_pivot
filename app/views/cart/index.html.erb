<h1 class="text-center">Your Donations Cart</h1>
<div class="container">

<% if !@cart.contents.empty? %>
  <table class="table table-hover">
    <tr class="active">
      <th>Item</th>
      <th>Description</th>
      <th>Value</th>
      <th>Subtotal</th>
      <th>Quantity</th>
      <th></th>
      <th></th>
    </tr>
  <% @cart.get_cart_item_list.each do |cart_item| %>
    <% if cart_item.class != LoanDecorator %>
        <tr class = "<%= cart_item.supply.name %>">
          <td><%= link_to cart_item.name, family_path(cart_item.family) %></td>
          <td><%= cart_item.description %></td>
          <td><%= currency cart_item.value %></td>
          <td><%= currency cart_item.subtotal(cart_item.supply_item_quantity) %></td>

          <%= form_for cart_item, url: cart_item_path(cart_item), method: :put do |f| %>
            <div class="<%= cart_item.supply.name %>">
              <td>
                <%= f.hidden_field :id, :value => cart_item.id %>
                <div class="form-group">
                <%= f.select :quantity, (0..cart_item.quantity), selected: cart_item.supply_item_quantity, class: 'form-control' %>
                </div>
              </td>
              <td><%= f.submit "Update Cart", class: "btn btn-default" %></td>
            </div>
          <% end %>
          <td><%= button_to "Remove", cart_item_path(cart_item, class_type: "supply"), method: :delete, class: "btn btn-warning" %></td>
        </tr>
    <% else %>
      <tr class = '<%= cart_item.purpose %>' >
        <td><%= link_to "#{cart_item.purpose} loan", family_path(cart_item.family) %></td>
        <td><%= cart_item.description %></td>
        <td><%= currency cart_item.requested_amount %></td>
        <td><%= currency cart_item.quantity %></td>

        <%= form_for cart_item, url: cart_item_path(cart_item), method: :put do |f| %>
          <div class="<%= cart_item.purpose %>">
            <td>
              <%= f.hidden_field :id, :value => cart_item.id %>
              <div class="form-group">
              <%= f.select :quantity, (cart_item.donation_range), selected: cart_item.quantity, class: 'form-control' %>
              </div>
            </td>
            <td><%= f.submit "Update Cart", class: "btn btn-default" %></td>
          </div>
        <% end %>
        <td><%= button_to "Remove", cart_item_path(cart_item, class_type: "Loan"),
                                                method: :delete, class: "btn btn-warning" %></td>
      </tr>
    <% end %>
  <% end %>
</table>

  <h2 id="cart-total"> Total: <%= currency @cart.total_price %> </h2>

  <% present @cart do |cart_presenter| %>
    <%= cart_presenter.checkout_link %>
  <% end %>

<% else %>
  <h3 class="text-center">There are no items in your cart</h3>
<% end %>
</div>
